<p id="link-creation-errors"></p>

<p><%= link_to "Sign Out", logout_path %><p>

<form id="new-link">
  <label>URL:
    <input id="link-url">
  </label>
  <label>Title:
    <input id="link-title">
  </label>
  <input type="submit" value="Add Link">
</form>

<div id="links-list">
  <% @links.each do |link| %>
    <div class="link" data-id=<%="#{link.id}"%> id=<%="link-#{link.id}"%>>
      <p class="link-title"> <%= link.title %> </p>
      <p class="link-url"> <%= link.url %> </p>
      <p class="link-read"> <%= link.read %> </p>
      <p class="link_buttons">
        <% unless link.read %>
          <button class="mark-read">Mark as Read</button>
        <% else %>
          <button class="mark-unread" style="text-decoration: line-through;">Mark as Unread</button>
        <% end %>
        <button class='edit-link'>Edit</button>
        <button class='delete-link'>Delete</button>
      </p>
    </div>
  <% end %>
</div>
